@{
    ViewData["Title"] = "Success";
}

<style>
    body {
        background: #f0f7ff;
        font-family: monospace;
    }

    .success-box {
        text-align: center;
        margin-top: 100px;
        animation: fadeIn 1.2s ease-in-out;
    }

    /* Green circle */
    .checkmark-circle {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background: #28a745;
        margin: auto;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        animation: popIn 0.7s ease-out forwards;
    }

    /* White tick mark */
    .checkmark {
        width: 70px;
        height: 35px;
        border-left: 10px solid white;
        border-bottom: 10px solid white;
        transform: rotate(-45deg);
        animation: draw 0.6s ease-in-out 0.8s forwards;
        opacity: 0;
    }

    /* Animations */

    @@keyframes popIn {
        0% {
            transform: scale(0);
            opacity: 0;
        }

        80% {
            transform: scale(1.1);
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    @@keyframes draw {
        0% {
            opacity: 0;
            transform: rotate(-45deg) scale(0.7);
        }

        100% {
            opacity: 1;
            transform: rotate(-45deg) scale(1);
        }
    }


    @@keyframes fadeIn {
        0% {
            opacity: 0;
            transform: translateY(40px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .success-text {
        margin-top: 25px;
        font-size: 32px;
        font-weight: 700;
        color: #28a745;
        animation: fadeIn 1.5s;
    }

    .sub-text {
        margin-top: 10px;
        font-size: 18px;
        color: #555;
        animation: fadeIn 2s;
    }

    .btn-back {
        margin-top: 140px;
        font-size: 18px;
        padding: 12px 30px;
        background: #007bff;
        border: none;
        border-radius: 8px;
        color: white;
        cursor: pointer;
        transition: 0.3s ease;
        animation: fadeIn 2.3s;
        text-decoration: none;
        transform :scale(1);
    }

        .btn-back:hover {
            color : white;
            transform: translateY(-2px) scale(1.2);
        }

</style>
<div class="d-flex  flex-column">

    <div class="success-box">
        <div class="checkmark-circle">
            <div class="checkmark"></div>
        </div>

        <div class="success-text">Payment Successful!</div>
        <div class="sub-text">Thank you. Your payment has been Successfull 🎉</div>

    </div>

    <div class="d-flex justify-content-around text-center">
        <a href="/Invoice/Index" class="btn-back mt-3">Back to Invoices</a>
    </div>


</div>